<Application
    x:Class="UniversalConverter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalConverter"
    xmlns:converters="using:UniversalConverter.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <converters:StatusToProgressConverter x:Key="StatusToProgressConverter"/>
            <converters:StatusToIndeterminateConverter x:Key="StatusToIndeterminateConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>