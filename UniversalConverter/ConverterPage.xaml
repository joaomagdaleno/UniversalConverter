<Page
    x:Class="UniversalConverter.ConverterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="10">
            <TextBlock Text="Conversor de Imagens" Style="{StaticResource TitleTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="SelectFileButton" >
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="OpenFile"/>
                        <TextBlock Text="Selecionar Arquivo"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SelectFolderButton">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="OpenFolder"/>
                        <TextBlock Text="Selecionar Pasta"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="Opções de Conversão" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ComboBox x:Name="OutputFormatComboBox" Header="Formato de Saída" PlaceholderText="Selecione o formato" Width="200">
                <ComboBoxItem Content="GIF"/>
                <ComboBoxItem Content="WEBP"/>
                <ComboBoxItem Content="JPG"/>
                <ComboBoxItem Content="PNG"/>
            </ComboBox>

            <Slider x:Name="WebpQualitySlider" Header="Qualidade WEBP" Minimum="1" Maximum="100" Value="75" Width="300"/>
            <Slider x:Name="JpgQualitySlider" Header="Qualidade JPG" Minimum="1" Maximum="100" Value="75" Width="300"/>
            <!-- PNG CompressionLevel: 0=None, 1=Fastest, up to 9=Best -->
            <Slider x:Name="PngCompressionSlider" Header="Compressão PNG (0=Mín, 9=Máx)" Minimum="0" Maximum="9" Value="6" Width="300"/>
            <CheckBox x:Name="GifLoopCheckBox" Content="Loop Infinito (GIF)" IsChecked="True"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,20">
            <Border x:Name="PreviewArea" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4">
                <Image x:Name="PreviewImage" Stretch="Uniform" />
            </Border>
            <TextBlock x:Name="PreviewTextBlock" Text="Selecione uma imagem para pré-visualizar" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button x:Name="ConvertButton" Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Switch"/>
                    <TextBlock Text="Converter"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>