<Page
    x:Class="UniversalConverter.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="20" Spacing="20">
        <TextBlock x:Uid="SettingsTitle" Style="{StaticResource TitleTextBlockStyle}"/>

        <StackPanel Spacing="10">
            <TextBlock x:Uid="AboutTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock x:Name="VersionTextBlock" x:Uid="VersionTextBlock"/>
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock x:Uid="AppearanceTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ComboBox x:Name="ThemeComboBox" x:Uid="ThemeComboBox" Width="200">
                <ComboBoxItem Content="Claro"/>
                <ComboBoxItem Content="Escuro"/>
                <ComboBoxItem Content="Padrão do Sistema"/>
            </ComboBox>
            <ComboBox x:Name="LanguageComboBox" x:Uid="LanguageComboBox" Width="200">
                <ComboBoxItem Content="Português" Tag="pt-BR"/>
                <ComboBoxItem Content="English" Tag="en-US"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock x:Uid="UpdatesTitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <Button x:Name="CheckForUpdatesButton" x:Uid="CheckForUpdatesButton"/>
        </StackPanel>
    </StackPanel>
</Page>